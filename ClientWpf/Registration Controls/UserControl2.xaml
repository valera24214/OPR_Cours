<UserControl x:Class="ClientWpf.Registration_Controls.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientWpf.Registration_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
        <Label HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="790">
            <Label.Content>
                <AccessText FontSize="23" TextWrapping="Wrap" Text="На указанную почту было отправлено письмо в кодом верификации. Проверьте почту и введите код:" Width="780"/>
            </Label.Content>
        </Label>
        <TextBox Name="textBox_code" FontSize="25" HorizontalAlignment="Left" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="352"/>

    </Grid>
</UserControl>
