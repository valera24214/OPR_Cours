        <Button FontSize="20" Content="Войти" Name="button_enter" HorizontalAlignment="Left" Margin="428,332,0,0" VerticalAlignment="Top" Height="52" Width="636" Click="button_enter_Click" />
        <TextBox Name="textBoxLogin" InputLanguageManager.InputLanguage="en_US" FontSize="20" HorizontalAlignment="Left" Margin="235,142,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="1023"/>
        <Label FontSize="25" Content="Login" HorizontalAlignment="Left" Margin="133,136,0,0" VerticalAlignment="Top"/>
        <Label FontSize="25" Content="Password" HorizontalAlignment="Left" Margin="91,200,0,0" VerticalAlignment="Top"/>
        <Label FontSize="20" Content="Нет учётной записи?" HorizontalAlignment="Left" Margin="647,449,0,0" VerticalAlignment="Top"/>
        <Button Name="buttonRegister" Click="buttonRegister_Click" Style="{StaticResource MaterialDesignFlatLightBgButton}" FontSize="20" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="428,484,0,0" VerticalAlignment="Top" Height="52" Width="636" />
        <PasswordBox InputLanguageManager.InputLanguage="en_US" Name="passwordBox" FontSize="20" HorizontalAlignment="Left" Margin="234,206,0,0" VerticalAlignment="Top" Width="1024"/>

    </Grid>
</Window>
